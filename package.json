{
  "name": "vpser",
  "version": "0.0.2",
  "license": "MIT",
  "author": {
    "name": "李茂峰",
    "email": "limaofeng@msn.com",
    "url": "https://homeworld.life"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:limaofeng/vpser.git"
  },
  "scripts": {
    "precommit": "lint-staged",
    "postinstall": "remotedev-debugger --hostname localhost --port 8000 --injectserver",
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "jest",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bluebird": "^3.5.1",
    "react": "^16.3.2",
    "react-native": "^0.55.4",
    "react-native-i18n": "^2.0.12",
    "react-native-kharak": "^1.3.14",
    "react-native-linear-gradient": "^2.4.0",
    "react-native-splash-screen": "^3.0.6",
    "react-native-tab-view": "^0.0.77",
    "react-native-vector-icons": "^4.6.0",
    "realm": "2.4.1",
    "redux-logger": "^3.0.6"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/lodash": "^4.14.110",
    "@types/react": "^16.4.1",
    "@types/react-native": "^0.55.22",
    "@types/react-native-vector-icons": "^4.6.1",
    "@types/react-navigation": "^2.0.6",
    "babel-core": "^6.26.3",
    "babel-preset-react-native-stage-0": "^1.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.1.0",
    "prettier": "^1.12.1",
    "react-dom": "^16.3.2",
    "react-native-typescript-transformer": "^1.2.10",
    "react-test-renderer": "^16.3.2",
    "remote-redux-devtools": "^0.5.12",
    "remotedev-rn-debugger": "^0.8.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": true
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/config/jest/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^React$": "<rootDir>/node_modules/react",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/fileTransform.js"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^(?!.*\\.(js|jsx)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/config/jest/setupTests.js"
    ],
    "modulePathIgnorePatterns": [
      "/node_modules/.*/react-native/",
      "/node_modules/.*/react/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!react-native|react-navigation)/",
      "/node_modules/(realm)/"
    ]
  },
  "babel": {
    "presets": [
      "babel-preset-react-native-stage-0/decorator-support"
    ],
    "env": {
      "development": {
        "plugins": [
          "transform-react-jsx-source"
        ]
      }
    }
  }
}
